<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.android.todoapp">
  <uses-permission android:name="android.permission.INTERNET"></uses-permission>

  <application
      android:icon="@drawable/android:star_big_on"
      android:label="@string/app_name"
      android:debuggable="true"
      android:name="com.android.todoapp.App"
      >

      <activity
        android:label="@string/app_name"
        android:name=".MainActivity"
      >
          <intent-filter>
              <action android:name="android.intent.action.MAIN"/>
              <category android:name="android.intent.category.LAUNCHER"/>
          </intent-filter>
      </activity>
      <activity android:label="TaskEditActivity" android:name=".TaskEditActivity"/>
      <activity android:label="TaskListActivity" android:name=".TaskListActivity"/>
  </application>

  <uses-sdk android:minSdkVersion="8"/>
</manifest>
